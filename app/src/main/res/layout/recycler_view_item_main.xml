<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_box_shape"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recyclerViewUserProfileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher_round"></ImageView>


            <TextView
                android:id="@+id/recyclerViewUserProfileNickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="닉네임"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="20dp"></TextView>

        </LinearLayout>


        <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/recyclerViewUserThumbnail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"></ImageView>



        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:id="@+id/recyclerViewLikeBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/like_default"></ImageView>

            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/comment"
                ></ImageView>





        </LinearLayout>

        <TextView
            android:id="@+id/recyclerViewCountLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="좋아요 0 회"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginLeft="14dp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            ></TextView>


        <TextView
            android:id="@+id/recyclerViewContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="내용"
            android:textSize="20dp"

            />


    </LinearLayout>
</LinearLayout>